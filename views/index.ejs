<% include header %>

  <title>
    <%= title %>
  </title>
  </head>

  <body>
    <div class="container">

      <div class="text-center mt-5">
        <h1>
          <%= title %>
        </h1>
        <p>Welcome to
          <%= title %>
        </p>
      </div>

      <div class="col-md-6 col-sm-12" style="margin: auto;">

        <% if (data.length == 0){ %>
          <div class="card text-white bg-dark m-3">
            <div class="card-body text-center">
              no post yet
            </div>
          </div>
          <% } %>

            <% data.forEach(function(post){ %>
              <div class="card mb-3">
                <!-- <img class="card-img-top" src="
                <%= 'data:'+ post.image.mimeType + ';base64,' + post.image.data %>"alt="image" height="240px"> -->
                <img class="card-img-top" src="
                                <%= post.image.path %>" alt="image" height="240px">
                <div class="card-body">
                  <p>
                    <span class="card-text">
                      #
                      <%= post.type %>
                    </span>
                    <span class="card-text float-right">
                      <span class="oi oi-map-marker"></span>
                      <%= post.location %>
                    </span>
                  </p>
                  <p class="card-text text-center">
                    <%= post.title %>
                  </p>
                  <span class="card-text">
                    <small class="text-muted">
                      <%= post.author %>
                    </small>
                  </span>
                  <span class="card-text float-right">
                    <small class="text-muted">
                      @
                      <%= post.date.toLocaleString() %>
                    </small>
                  </span>

                </div>
              </div>
              <% }) %>

      </div>

    </div>

  </body>

  </html>