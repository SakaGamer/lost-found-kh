<% include header %>

    <title>
        <%= title %>
    </title>
    </head>

    <body>
        <div class="container">

            <div class="text-center mt-5">
                <h1>
                    <%= title %>
                </h1>
                <p>
                    what I have posted
                </p>
            </div>

            <a href="/mywall/addpost" class="float">
                <span class="oi oi-plus" style="margin-top: 22px"></span>
            </a>

            <div class="col-md-6 col-sm-12" style="margin: auto;">

                <% if (data.length == 0){ %>
                    <div class="card text-white bg-dark m-3">
                        <div class="card-body text-center">
                            no post yet
                        </div>
                    </div>
                    <% } %>

                        <% data.forEach(function(post){ %>
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="media">

                                        <% if (data.image == ""){ 
                                    data.image.path = '/images/weekend.png' } %>

                                            <!-- <img class=" mr-3 " src="<%= 'data:'+ post.image.mimeType + ';base64,' + post.image.data %>" alt="image" width="160px" height="160px"
                                                style="border-radius: 4px"> -->
                                            <img class=" mr-3 " src="<%= post.image.path %>" alt="image" width="160px" height="160px" style="border-radius: 4px">
                                            <div class="media-body">
                                                <span class="card-text float-right">
                                                    <small class="text-muted">
                                                        <%= post.date.toLocaleString() %>
                                                    </small>
                                                </span>
                                                <p class="mt-0 ">
                                                    #
                                                    <%= post.type %>
                                                </p>
                                                <h5>
                                                    <% if(post.title.length > 30 ){
                                                post.title = post.title.substring(0, 30) + '...'
                                            } %>
                                                        <%= post.title %>
                                                </h5>
                                                <p>
                                                    <% if(post.location.length > 30 ){
                                        post.location = post.location.substring(0, 30) + '...' 
                                        } %>
                                                        <span class="oi oi-map-marker"></span>
                                                        <%= post.location %>
                                                </p>

                                                <a href="/mywall/post/edit/<%= post._id %>" class="btn btn-primary">
                                                    <span class="oi oi-pencil"></span> edit</a>

                                                <button class="btn btn-danger" data-toggle="modal" data-target="#<%= post._id %>">
                                                    <span class="oi oi-trash"></span> delete</button>
                                            </div>
                                    </div>
                                </div>
                            </div>


                            <!-- Modal -->
                            <div class="modal fade" id="<%= post._id %>" tabindex="-1" role="dialog" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Delete this post ???</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body text-center">
                                            <img src="<%= post.image.path %>" alt="image" width="160px" height="160px" style="border-radius: 4px">
                                            <p class="mt-3">
                                                #
                                                <%= post.type %>
                                            </p>
                                            <p>
                                                <% if(post.title.length > 30 ){
                                                                                            post.title = post.title.substring(0, 30) + '...'
                                                                                        } %>
                                                    <%= post.title %>
                                            </p>
                                            <p>
                                                <% if(post.location.length > 30 ){
                                                                                    post.location = post.location.substring(0, 30) + '...' 
                                                                                    } %>
                                                    <span class="oi oi-map-marker"></span>
                                                    <%= post.location %>
                                            </p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                                            <a href="/mywall/post/delete/<%= post._id %>">
                                                <button type="button" class="btn btn-danger">
                                                    <span class="oi oi-trash"></span> delete</button>
                                            </a>

                                        </div>
                                    </div>
                                </div>
                            </div>


                            <% }) %>

            </div>

        </div>

    </body>

    </html>