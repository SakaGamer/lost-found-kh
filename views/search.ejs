<% include header %>

    <title>
        <%= title %>
    </title>
    </head>

    <body>
        <div class="container">

            <div class="text-center mt-5">
                <h1>
                    <%= title %>
                </h1>
                <p>Result for "<%= query %>"
                </p>
            </div>

            <div class="col-md-6 col-sm-12" style="margin: auto;">

                <% data.forEach(function(post){ %>
                    <div class="card mb-3">
                        <!-- <img class="card-img-top" src="
                                <%= 'data:'+ post.image.mimeType + ';base64,' + post.image.data %>"alt="image" height="240px"> -->
                        <img class="card-img-top" src="
                                                <%= post.image.path %>" alt="image" height="240px">
                        <div class="card-body">
                            <p>
                                <span class="card-text">
                                    #<%= post.type %>
                                </span>
                                <span class="card-text float-right">
                                    <% if(post.location.length > 40 ){
                                      post.location = post.location.substring(0, 40) + '...' 
                                      } %>
                                        <span class="oi oi-map-marker"></span>
                                        <%= post.location %>
                                </span>
                            </p>
                            <p class="card-text text-center">
                                <% if(post.title.length > 70 ){
                                    post.title = post.title.substring(0, 70) + '...'
                                    } %>
                                    <%= post.title %>
                            </p>
                            <span class="card-text">
                                <small class="text-muted">
                                    <%= post.author %>
                                </small>
                            </span>
                            <span class="card-text float-right">
                                <small class="text-muted">
                                    <%= post.date.toLocaleString() %>
                                </small>
                            </span>
                
                        </div>
                    </div>
                    <% }) %>

            </div>

        </div>

    </body>

    </html>